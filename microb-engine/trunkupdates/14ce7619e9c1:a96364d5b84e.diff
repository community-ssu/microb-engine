+                                                      expandAlphaRev_1x64 (unpack_32_1x64 (m)),
+                                                      unpack_32_1x64 (d)));
+                }
+
+            }
+
+            src++;
+            dst++;
+            w--;
+        }
+    }
+
+    _mm_empty();
