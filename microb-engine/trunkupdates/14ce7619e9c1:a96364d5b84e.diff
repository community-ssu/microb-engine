+  NS_ASSERTION(NS_IsMainThread(), "Wrong thread!");
+
+  // Things we need to make all this work...
+  nsIDocument* parentDoc = mWorker->Pool()->GetParentDocument();
+  NS_ASSERTION(parentDoc, "Null parent document?!");
