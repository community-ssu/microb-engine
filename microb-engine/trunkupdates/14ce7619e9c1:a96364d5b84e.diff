+static inline uint32_t
+coreCombineOverUPixelsse2 (uint32_t src, uint32_t dst)
+{
+    uint8_t     a;
+    __m64       ms;
+
+    a = src >> 24;
+
+    if (a == 0xff)
+    {
+        return src;
+    }
+    else if (a)
+    {
+        ms = unpack_32_1x64 (src);
+        return pack_1x64_32 (over_1x64 (ms, expandAlpha_1x64 (ms), unpack_32_1x64 (dst)));
+    }
+
+    return dst;
+}
