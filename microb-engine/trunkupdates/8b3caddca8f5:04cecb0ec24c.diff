+PRBool
+XPCJSRuntime::ShutdownWatchdog()
+{
+    PR_Lock(mWatchdogLock);
+    mWatchdogRunning = PR_FALSE;
+    PRThread *t = mWatchdogThread;
+    mWatchdogThread = NULL;
+    PR_NotifyCondVar(mWatchdogWakeup);
+    PR_Unlock(mWatchdogLock);
