--- mozilla.orig/security/nss/cmd/platlibs.mk
+++ mozilla/security/nss/cmd/platlibs.mk
@@ -239,17 +239,17 @@
 ifeq ($(OS_ARCH), AIX) 
 EXTRA_SHARED_LIBS += -brtl 
 endif
 
 # If GNU ld is used, we must use the -rpath-link option to tell
 # the linker where to find libsoftokn3.so, an implicit dependency
 # of libnss3.so.
 ifeq (,$(filter-out BSD_OS FreeBSD Linux NetBSD, $(OS_ARCH)))
-EXTRA_SHARED_LIBS += -Wl,-rpath-link,$(DIST)/lib
+EXTRA_SHARED_LIBS += -Wl,-rpath-link,$(DIST)/lib:/lib:/usr/lib:/usr/local/lib:/usr/X11R6/lib
 endif
 
 ifeq ($(OS_ARCH), SunOS)
 ifdef NS_USE_GCC
 ifdef GCC_USE_GNU_LD
 EXTRA_SHARED_LIBS += -Wl,-rpath-link,$(DIST)/lib
 endif
 endif
