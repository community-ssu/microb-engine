+
+    PRInt32 num = PR_MIN((PRInt32) len, chunk);
+
+    PRUint32 result;
+    rv = mSource->ReadSegments(NS_CopySegmentToStream, mDest, num, &result);
+    if (NS_FAILED(rv))
