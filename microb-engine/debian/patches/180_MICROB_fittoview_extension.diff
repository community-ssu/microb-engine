+nsresult
+nsFitToView::OptimizeElement(float aCurOptimize, nsIDOMNode * node, nsIPresShell* aPresShell, nsIDOMViewCSS *defaultCSSView, nsRect &wrect)
+{
+  //printf("nsFitToView::OptimizeElement\n");
+  nsresult rv;
+  nsRect srect;
+
+  nsCOMPtr<nsIDOMHTMLElement> element = do_QueryInterface(node, &rv);
+  if(NS_FAILED(rv))
+    return NS_OK;
+
+  if (!aPresShell)
+    return NS_ERROR_FAILURE;
+
+  nsIFrame* frame = nsnull;
+  if (aPresShell)
+  {
+    nsCOMPtr<nsIContent> iContent = do_QueryInterface(element, &rv);
+    NS_ENSURE_SUCCESS(rv, rv);
+    frame = aPresShell->GetPrimaryFrameFor(iContent);
+    NS_ENSURE_TRUE(frame, rv);
+    srect = frame->GetRect();
+    nsPresContext *context = aPresShell->GetPresContext();
+    if (!context)
+      return NS_ERROR_FAILURE;
+    srect.width = context->AppUnitsToDevPixels(srect.width);
+    srect.height = context->AppUnitsToDevPixels(srect.height);
+  }
+
+  if (!srect.width || !srect.height)
+    return NS_ERROR_FAILURE;
+
+  nsRect rect(0,0,0,0);
+  rect = frame->GetScreenRectExternal();
+  PRBool full = PR_FALSE, half = PR_FALSE;
+  if (rect.x >= wrect.x + wrect.width)
+  {
+    full = PR_TRUE;
+  }
+  else if (rect.x+rect.width > wrect.x + wrect.width)
+  {
+    half = PR_TRUE;
+  }
+  if (!half && !full)
+    return NS_OK;
+
+  nsString nname;
+  node->GetNodeName(nname);
+
+  NS_NAMED_LITERAL_STRING(class_attr, "class");
+  nsString classValue;
+  element->GetAttribute(class_attr, classValue);
+
+  if (nname.LowerCaseEqualsLiteral("body")
+  )
+  {
+    classValue.AppendLiteral(" ftv");
+  }
+  else
+  {
+    classValue.AppendLiteral(" ftv");
+    classValue.AppendLiteral(" ftvAll");
+
+    if (nname.LowerCaseEqualsLiteral("td"))
+    {
+      if (half) {
+        classValue.AppendLiteral(" ftvHalf");
+      }
+      if (full)
+      {
+        classValue.AppendLiteral(" ftvFull");
+      }
+    }
+  }
+  element->SetAttribute(class_attr, classValue);
+  return rv;
+}
