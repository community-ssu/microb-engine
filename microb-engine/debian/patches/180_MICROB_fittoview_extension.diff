+      if (presShell)
+      {
+        nsIFrame* frame = presShell->GetPrimaryFrameFor(content);
+        if (frame)
+          wrect = frame->GetScreenRectExternal();
+        //                printf("Doc Rect: x: %i, y: %i, w: %i, rx: %i, h: %i\n", wrect.x, wrect.y, wrect.width, wrect.width+wrect.x, wrect.height);
+      }
+    }
+  }
+
+  if( !nodelist )
+    return NS_ERROR_FAILURE;
+  PRUint32 length, zoomed;
+  rv = nodelist->GetLength(&length);
+  NS_ENSURE_SUCCESS(rv, rv);
+  zoomed = length;
+  nsCOMPtr<nsIDOMNode> node;
+  for (PRUint32 i = 0; i < length; i++)
+  {
+    rv |= nodelist->Item(i, getter_AddRefs(node));
+    if (!NS_FAILED(rv) && node)
+    {
+      rv |= OptimizeElement(aCurrOptimizeVal, node, ps, defaultCSSView, wrect);
+    }
+    if (NS_FAILED(rv))
+      zoomed--;
+    rv = NS_OK;
+  }
+  return rv;
+}
