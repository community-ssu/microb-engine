+/**
+ * @return the first occurrence of a character within a string buffer,
+ *         or nsnull if not found
+ */
+static const char*
+FindChar(char c, const char *begin, const char *end)
+{
+  for (; begin < end; ++begin) {
+    if (*begin == c)
+      return begin;
+  }
+  return nsnull;
+}
