+                                                     aNotify);
+  NS_ENSURE_SUCCESS(rv,rv);
+
+  if (aNamespaceID == kNameSpaceID_None)
+  {
+    if (!mAnimation->UnsetAttr(aAttribute))
+      mTimedElement->UnsetAttr(aAttribute);
+  }
+
+  return NS_OK;
+}
