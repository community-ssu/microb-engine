+PRBool
+nsSVGTransformSMILAttr::EqualTarget(const nsISMILAttr &aOther) const
+{
+  if (aOther.mType != &sType)
+    return PR_FALSE;
+
+  nsSVGTransformSMILAttr const *other =
+    static_cast<const nsSVGTransformSMILAttr*>(&aOther);
+  return (mVal == other->mVal);
+}
