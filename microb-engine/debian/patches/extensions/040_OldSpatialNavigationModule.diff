+        gDirectionalBias = 1;
+    }
+    rv = prefBranch->GetBoolPref("snav.disableJS", &tempBool);
+    if (NS_SUCCEEDED(rv))
+      mDisableJSWhenFocusing = tempBool;
+    rv = prefBranch->GetIntPref("snav.rectFudge", &tempInt32);
+    if (NS_SUCCEEDED(rv))
