+inline void centerRect(int aDirection, nsRect& aRect)
+{
+  if (aDirection == eNavLeft)
+    aRect.x = 1000000;
+  else if (aDirection == eNavRight)
+    aRect.x = 0;
+  else if (aDirection == eNavUp)
+    aRect.y = 1000000;
+  else
+    aRect.y = 0;
+
+  aRect.height = 1;
+  aRect.width = 1;
