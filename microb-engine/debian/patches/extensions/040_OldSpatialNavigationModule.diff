+void poly2Rect(int sides, nscoord* coord, nsRect* rect)
+{
+  nscoord x1, x2, y1, y2, xtmp, ytmp;
+  x1 = x2 = coord[0];
+  y1 = y2 = coord[1];
+  for (PRInt32 i = 2; i < sides; i += 2)
+  {
+    xtmp = coord[i];
+    ytmp = coord[i+1];
+    x1 = x1 < xtmp ? x1 : xtmp;
+    y1 = y1 < ytmp ? y1 : ytmp;
+    x2 = x2 > xtmp ? x2 : xtmp;
+    y2 = y2 > ytmp ? y2 : ytmp;
+  }
+  rect->SetRect(x1, y1, x2, y2);
+}
